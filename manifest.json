{
  "manifest_version": 2,
  "name": "yt-dlp-firefox",
  "version": "0.1",
  "description": "Execute local yt-dlp on Firefox.",
  "applications": {
    "gecko": {
      "id": "yt-dlp-firefox@example.com"
    }
  },
  "icons": {
    "48": "icons/yt.svg"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "yt-dlp-firefox@example.com",
      "strict_min_version": "50.0"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/yt.svg"
  },
  "permissions": [
    "nativeMessaging"
  ]
}